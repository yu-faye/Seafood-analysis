{
  "name": "RawFishingEventsData",
  "properties": {
    "type": "Json",
    "typeProperties": {
      "location": {
        "type": "AzureBlobFSLocation",
        "fileSystem": "raw-data",
        "folderPath": "fishing-events",
        "fileName": {
          "value": "@dataset().fileName",
          "type": "Expression"
        }
      }
    },
    "linkedServiceName": {
      "referenceName": "AzureDataLakeStorageGen2",
      "type": "LinkedServiceReference"
    },
    "parameters": {
      "fileName": {
        "type": "string"
      }
    },
    "schema": {
      "type": "object",
      "properties": {
        "events": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "event_id": {
                "type": "string"
              },
              "event_type": {
                "type": "string"
              },
              "vessel": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "ssvid": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "flag": {
                    "type": "string"
                  },
                  "vessel_class": {
                    "type": "string"
                  }
                }
              },
              "port": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "country": {
                    "type": "string"
                  },
                  "coordinates": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    }
                  }
                }
              },
              "start": {
                "type": "string",
                "format": "date-time"
              },
              "end": {
                "type": "string",
                "format": "date-time"
              },
              "duration_hours": {
                "type": "number"
              }
            }
          }
        }
      }
    }
  }
}

